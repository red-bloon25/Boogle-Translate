<Window x:Class="Boogle_Translate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boogle_Translate"
        mc:Ignorable="d"
        Title="Boogle Translate™⁺¹" Height="400" Width="700"
        
        >
    
    <Grid x:Name="grid">
        <Grid.Background>
            <ImageBrush ImageSource="\Images\backgroundA.jpg" x:Name="Background"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="50"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="150"/>
            <RowDefinition  Height="187.5"/>
            <RowDefinition Height="62.5"/>
            
        </Grid.RowDefinitions>
        
        <!-- <Grid.ShowGridLines>True</Grid.ShowGridLines> -->
        <!-- <Border Grid.Row="0" Grid.Column="0" Background="Red"/> -->
        <!-- <Border Grid.Row="1" Grid.Column="0" Background="Green"/> -->
        <!-- <Border Grid.Row="2" Grid.Column="0" Background="Blue"/> -->
        <!-- <Border Grid.Row="0" Grid.Column="1" Background="Yellow"/> -->
        <!-- <Border Grid.Row="0" Grid.Column="2" Background="Purple"/> -->
        
        <CheckBox Grid.Row="0" Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0"  Unchecked="UNSETbg" Checked="SetBackground"/>
        <Label Grid.Row="2" Grid.Column="2" Content="BG:1" FontSize="12"  HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="BGNUM"/>
        <Label Grid.Row="0" Grid.Column="0" Content="BG" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,5,0,0"/>
        <Image Grid.Row="0" Grid.Column="1" Source="\Images\BoogleTranslate-BoogleTranslate.png"  Stretch="Fill" RenderTransformOrigin="0.5,0.5" x:Name="TitleImage" ImageFailed="TitleImage_OnImageFailed">
            <Image.RenderTransform>
                <RotateTransform Angle="7"/>
            </Image.RenderTransform>
        </Image>
        
        
        <ComboBox Grid.Row="1" Grid.Column="1" Width="150" Height="30" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,10,0,0" x:Name="FromLanguage" DropDownClosed="FromLanguage_OnDropDownClosed" >
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>AMEIRCAN</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Row="1" Grid.Column="1" Width="240" Height="140" Text="Enter Text"  FontFamily="./Fonts/#Peralta" FontSize="15" HorizontalAlignment="Left" x:Name="Input" VerticalAlignment="Bottom" KeyDown="Input_OnKeyDown" GotKeyboardFocus="ClearText"/>
        <Button Grid.Row="1" Grid.Column="1" Width="50" Height="50" Click="DoTheTranslating"></Button>
        <ComboBox Grid.Row="1" Grid.Column="1" Width="150" Height="30" Text="" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,50,0" x:Name="ToLanguage">
            <ComboBoxItem>Spanish</ComboBoxItem>
            <ComboBoxItem>Silly</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Row="1" Grid.Column="1" Width="240" Height="140" Text="Enter Text"  FontFamily="./Fonts/#Peralta" FontSize="15" HorizontalAlignment="Right" x:Name="Output" VerticalAlignment="Bottom" MaxLength="40"/>

    </Grid>
</Window>
